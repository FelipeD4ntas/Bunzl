@model Bunzl.Infra.CrossCutting.Templates.Models.Emails.SolicitacaoNegociacaoModel
@{
	Layout = "/Views/Shared/_LayoutEmail.cshtml";
}

<div>
	<div style="text-align: center; ">
		<p style="margin-bottom: 0px; color: white;">Olá @Model.NomeFornecedor.</p>
		<p style="margin-top: 0px; color: white;">A Empresa @Model.NomeEmpresa, solicitou uma Negociação Comercial.</p>
		<p style="margin-top: 0px; color: white;">Para visualizar todos os detalhes e responder à solicitação, por favor, acesse o Portal do Fornecedor com suas credenciais.</p>
		<div style="text-align: center; margin-top: 20px;">
			<a href="@Model.Link" style="background-color: #003C61; color: white; padding: 10px 20px; text-decoration: none; border: 1px solid white; border-radius: 5px; cursor: pointer; display: inline-block;">
				Fazer Login
			</a>
		</div>
	</div>
</div>