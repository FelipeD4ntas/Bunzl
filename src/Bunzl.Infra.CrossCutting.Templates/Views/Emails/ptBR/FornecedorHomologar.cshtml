@model Bunzl.Infra.CrossCutting.Templates.Models.Emails.FornecedorHomologarModel
@{
    Layout = "/Views/Shared/_LayoutEmail.cshtml";
}

<div>
    <div style="text-align: center; ">
        <p style="margin-bottom: 0px; color: white;">Olá @Model.Nome</p>
        <p style="margin-top: 0px; color: white;">Gostaríamos de informar que o cadastro do fornecedor @Model.NomeFornecedor foi recentemente alterado no sistema e precisa ser homologado novamente.</p>
    </div>
    <div style="text-align: center; margin-top: 20px;">
        <a href="@Model.Link" style="background-color: #003C61; color: white; padding: 10px 20px; text-decoration: none; border: 1px solid white; border-radius: 5px; cursor: pointer; display: inline-block;">
            Revalidar Cadastro do Fornecedor
        </a>
    </div>
</div>