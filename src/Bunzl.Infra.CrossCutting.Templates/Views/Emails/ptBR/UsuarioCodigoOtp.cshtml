@model Bunzl.Infra.CrossCutting.Templates.Models.Emails.UsuarioCodigoOtpModel
@{
    Layout = "/Views/Shared/_LayoutEmail.cshtml";
}

<div>
    <div style="text-align: center;">
        <p style="margin-bottom: 0px; color: white;">Olá @Model.Nome, seu e-mail está fazendo login no Portal de Fornecedores Bunzl.</p>
        <p style="margin-top: 0px; color: white;">Segue o código para ter acesso ao portal.</p>
        <p style="margin-top: 20px; color: white;">Se você não tem ciência desse acontecimento, fale com o administrador do sistema.</p>
    </div>
    <div style="text-align: center; margin-top: 20px;">
        <div style="display: inline-block; padding: 10px 20px; font-size: 24px; font-weight: bold; color: #004687; background-color: white; border-radius: 5px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
            @Model.CodigoOtp
        </div>
    </div>
</div>