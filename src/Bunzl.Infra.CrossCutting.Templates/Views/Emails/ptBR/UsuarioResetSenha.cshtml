@model Bunzl.Infra.CrossCutting.Templates.Models.Emails.UsuarioResetSenhaModel
@{
    Layout = "/Views/Shared/_LayoutEmail.cshtml";
}

<div>
    <div style="text-align: center;">
        <p style="margin-bottom: 0px; color: white;">Olá @Model.Nome, foi solicitado um reset de senha para sua conta no Portal de Fornecedores Bunzl.</p>
        <p style="margin-top: 0px; color: white;">Acesse o link abaixo para redefinir sua senha no portal.</p>
        <p style="margin-top: 20px; color: white;">Se você não tem ciência desse acontecimento, fale com o administrador do sistema.</p>
    </div>
    <div style="text-align: center; margin-top: 20px;">
        <a href="@Model.Link" style="background-color: #003C61; color: white; padding: 10px 20px; text-decoration: none; border: 1px solid white; border-radius: 5px; cursor: pointer; display: inline-block;">
            Redefinir Senha
        </a>
    </div>
</div>