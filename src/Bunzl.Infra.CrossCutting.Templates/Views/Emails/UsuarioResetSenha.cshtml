@model Bunzl.Infra.CrossCutting.Templates.Models.Emails.UsuarioResetSenhaModel
@{
    Layout = "/Views/Shared/_LayoutEmail.cshtml";
}

<div>
    <div style="text-align: center;">
        <p style="margin-bottom: 0px; color: white;">Hello @Model.Nome, a password reset has been requested for your account on the Bunzl Importers Portal.</p>
        <p style="margin-top: 0px; color: white;">Use the link below to reset your password.</p>
        <p style="margin-top: 20px; color: white;">If you did not request this, please contact the system administrator.</p>
    </div>
    <div style="text-align: center; margin-top: 20px;">
        <a href="@Model.Link" style="background-color: #003C61; color: white; padding: 10px 20px; text-decoration: none; border: 1px solid white; border-radius: 5px; cursor: pointer; display: inline-block;">
            Reset Password
        </a>
    </div>
</div>